<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        layout="@layout/mi_tool_bar"
        android:id="@+id/idToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/black"
        android:layout_below="@id/idToolBar"
        android:id="@+id/idLinea_0"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idReciclerView"
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:layout_below="@id/idLinea_0"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/black"
        android:layout_below="@id/idReciclerView"
        android:id="@+id/idLinea"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="266dp"
        android:layout_height="154dp"
        android:layout_below="@id/idLinea"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="1dp"
        android:text="SpiderMan" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idReciclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="22dp"
        android:layout_toStartOf="@+id/textView2"
        app:srcCompat="@drawable/spider" />


</RelativeLayout>
